{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "pretty": true,
    "declaration": true,
    "sourceMap": true,
    "target": "es6",
    "experimentalDecorators": true,
    "outDir": "dist",
    "types": [
      "node",
      "jest"
    ],
    "strict": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "./*.ts", "./*/*.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}