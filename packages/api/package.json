    "license": "ISC",
    "dependencies": {
      "@types/body-parser": "^1.19.2",
      "@types/express": "^4.17.14",
      "body-parser": "^1.20.1",
      "cors": "^2.8.5",
      "cron-parser": "^4.6.0",
      "express": "^4.18.2",
      "supertest": "^6.3.1"
    },
    "devDependencies": {
      "@types/cors": "^2.8.12"
    }
  }