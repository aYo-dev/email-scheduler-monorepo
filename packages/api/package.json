      "@types/ramda": "^0.28.18",
      "body-parser": "^1.20.1",
      "class-validator": "^0.13.2",
      "cors": "^2.8.5",
      "cron-parser": "^4.6.0",
      "dayjs": "^1.11.6",
      "dotenv": "^16.0.3",
      "errorhandler": "^1.5.1",
      "express": "^4.18.2",
      "lambda-ts": "^1.1.3",
      "mongoose": "^6.7.0",
      "nodemon": "^2.0.20",
      "ramda": "^0.28.0",
      "supertest": "^6.3.1",
